<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
        <div class="col-form-label col-sm-2">
            <%= f.label :name %>
        </div>
        <div class="col-sm-8">     
            <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
        </div>    
    </div>       
    <div class="form-group">
        <div class="offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-dark btn-lg' %>
        </div>
    </div>        
<% end %>
<div class="col-xs-4 offset-4">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>       
