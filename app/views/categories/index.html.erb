<h1 class="page-title" align="center"> Listing all categories </h1>
<div align="center">
    <%= will_paginate %>
    <% @categories.each do |category| %>
        <ul class="listing">
            <div class="row">
                <div class="card card-body bg-light col-md-4 offset-4">
                    <li class="article-title">
                        <%= link_to "#{category.name}", category_path(category) %>
                    </li>
                </div>
            </div>
        </ul>                
    <% end %>
    <%= will_paginate %>
</div>    