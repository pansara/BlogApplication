<% if obj.errors.any? %>
    <div>
        <div class="col-xs-8 offset-2">
            <div class="card myclass">
                <div class="card-header">
                    <h2 class="card-title">
                        <%= pluralize(obj.errors.count, "error") %>
                        prohibited this article from being saved:
                    </h2>
                    <div class="card-block">
                        <ul>
                            <% obj.errors.full_messages.each do |msg| %>  
                                <li><%= msg %></li>
                            <% end %>  
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>                         
<% end %>