<h1 class="page-title" align="center">All Bloggers</h1>

<div align="center">
    <div class="pagination page-title">
    <%= will_paginate %>
    </div> 
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="card card-body bg-light col-md-4 offset-4">
                    <li><%= link_to gravatar_for(user), user_path(user) %></li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete this user", user_path(user), method: :delete, 
                                    data: { confirm: "Are you sure you want to delte the users and all their articles" } %></li>
                    <% end %>
                </div>
            </div>
        </ul>                    
    <% end %>
    <div class="pagination page-title">
    <%= will_paginate %>
    </div>
</div>    